Library lua
  Path:     src
  Modules:  Lua_api, 
            Lua_api_lib, 
            Lua_aux_lib
  CSources: stub.c
  BuildDepends: unix
  CCopt: -O3 -Wall -ggdb
  if flag(lua51)
    CClib: -llua5.1
  else
    CClib: -llua


Document "api-lua"
  Title:                API reference for Lua
  Type:                 ocamlbuild (0.2.0~alpha1)
  InstallDir:           $htmldir/lua
  XOCamlbuildPath:      src/
  XOCamlbuildLibraries: lua
  BuildTools+:          ocamldoc

#
# Benchmarks
#

Flag bench
  Description: Create and run benchmark tests
  Default:     false

Executable bench
  Path:         tests
  Build$:       flag(bench)
  Install:      false
  MainIs:       main.ml
  Custom:       true
  BuildDepends: lua
  
Test bench
  Run$:      flag(bench)
  Command:   $bench
  TestTools: bench
 
